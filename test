fun thrice(fn) {
  for (var i = 1; i <= 3; i = i + 1) {
    fn(i);
  }
}

thrice(fun (a) {
  print a;
});

var a = fun () {
  print "standalone lambda";
};

a();

fun () {
  return "useless lambda, not bound to anything";
}

// fun () {};  // this tricky case should still not break the code, even if useless
