class Cake {

  init(adjective) {
    this.adjective = adjective;
  }

  taste(flavor) {
    print "The " + flavor + " cake is " + this.adjective + "!";
  }
}

var cake = Cake("delicious");
var flavor = "German chocolate";
cake.taste(flavor);

class Bacon {
  class eat() {
    print "Crunch crunch crunch!";
  }
}

Bacon.eat(); // Prints "Crunch crunch crunch!".

class Math {
  class square(n) {
    return n * n;
  }
}

print Math.square(3); // Prints "9".